import sys
import os
from pathlib import Path
from colorama import Fore, Style, init

# –Ü–Ω—ñ—Ü—ñ–∞–ª—ñ–∑–∞—Ü—ñ—è colorama
init(autoreset=True)

def print_directory_structure(directory_path, level=0):
    # –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ, —á–∏ —ñ—Å–Ω—É—î –≤–∫–∞–∑–∞–Ω–∞ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—è
    if not directory_path.exists() or not directory_path.is_dir():
        print(Fore.RED + "–ü–æ–º–∏–ª–∫–∞: –≤–∫–∞–∑–∞–Ω–∏–π —à–ª—è—Ö –Ω–µ —î –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—î—é –∞–±–æ –Ω–µ —ñ—Å–Ω—É—î.")
        return

    # –û—Ç—Ä–∏–º—É—î–º–æ –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó
    for item in directory_path.iterdir():
        # –í–∏–≤–æ–¥–∏–º–æ –≤—ñ–¥—Å—Ç—É–ø –≤ –∑–∞–ª–µ–∂–Ω–æ—Å—Ç—ñ –≤—ñ–¥ —Ä—ñ–≤–Ω—è –≤–∫–ª–∞–¥–µ–Ω–æ—Å—Ç—ñ
        indent = " " * (level * 2)
        
        if item.is_dir():
            # –í–∏–≤–æ–¥–∏–º–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó —Å–∏–Ω—ñ–º –∫–æ–ª—å–æ—Ä–æ–º
            print(f"{indent}{Fore.BLUE}üìÇ {item.name}")
            # –†–µ–∫—É—Ä—Å–∏–≤–Ω–æ –≤–∏–≤–æ–¥–∏–º–æ –≤–º—ñ—Å—Ç –ø—ñ–¥–∫–∞—Ç–∞–ª–æ–≥—É
            print_directory_structure(item, level + 1)
        else:
            # –í–∏–≤–æ–¥–∏–º–æ —Ñ–∞–π–ª–∏ –∑–µ–ª–µ–Ω–∏–º –∫–æ–ª—å–æ—Ä–æ–º
            print(f"{indent}{Fore.GREEN}üìú {item.name}")

def main():
    # –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ –Ω–∞—è–≤–Ω–æ—Å—Ç—ñ –∞—Ä–≥—É–º–µ–Ω—Ç—ñ–≤ –∫–æ–º–∞–Ω–¥–Ω–æ–≥–æ —Ä—è–¥–∫–∞
    if len(sys.argv) != 2:
        print(Fore.RED + "–ü–æ–º–∏–ª–∫–∞: –ø–æ—Ç—Ä—ñ–±–Ω–æ –≤–∫–∞–∑–∞—Ç–∏ —à–ª—è—Ö –¥–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó.")
        sys.exit(1)
    
    # –û—Ç—Ä–∏–º—É—î–º–æ —à–ª—è—Ö –¥–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó –∑ –∞—Ä–≥—É–º–µ–Ω—Ç—É –∫–æ–º–∞–Ω–¥–Ω–æ–≥–æ —Ä—è–¥–∫–∞
    directory_path = Path(sys.argv[1])

    # –í–∏–∫–ª–∏–∫–∞—î–º–æ —Ñ—É–Ω–∫—Ü—ñ—é –¥–ª—è –≤–∏–≤–µ–¥–µ–Ω–Ω—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∏
    print_directory_structure(directory_path)

if __name__ == "__main__":
    main()
